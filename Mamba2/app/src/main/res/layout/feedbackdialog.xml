<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <RelativeLayout
        android:id="@+id/headline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/vadim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enquiry Dialogue"
        android:fontFamily="@font/medium"
        android:textSize="20dp"
        android:textColor="@color/colorPrimary"/>


        <TextView
            android:id="@+id/vadimII"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Users"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/vadim"
            android:fontFamily="@font/medium"
            android:textSize="15dp"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/dispatchchoice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_car"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:text="Dispatch Manager"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp"/>



            <TextView
                android:id="@+id/dispatchnumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:text="Phone Number"
                android:textColor="@color/black"
                android:textSize="15sp"/>

            <TableRow>

                <TextView

                android:id="@+id/replydispatchBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Text"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:drawableStart="@drawable/ic_reply"/>


                <TextView

                    android:id="@+id/calldispatchBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Call"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="30dp"
                    android:drawableStart="@drawable/ic_call"/>



                <TextView

                    android:id="@+id/whtsdispatchBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Whatsapp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="30dp"
                    android:drawableStart="@drawable/ic_call"/>

            </TableRow>




            <TextView
                android:id="@+id/staffchoice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_personoutline"
                android:layout_marginTop="40dp"
                android:text="Finance"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp"/>


            <TextView
                android:id="@+id/financenumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:text="Phone Number"
                android:textColor="@color/black"
                android:textSize="15sp"/>


            <TableRow>

                <TextView
                    android:id="@+id/replyfinanceBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Text"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="40dp"
                    android:drawableStart="@drawable/ic_reply"/>


                <TextView

                    android:id="@+id/callfinanceBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Call"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="40dp"
                    android:drawableStart="@drawable/ic_call"/>

                <TextView

                    android:id="@+id/whtsfinanceBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Whatsapp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="40dp"
                    android:drawableStart="@drawable/ic_call"/>

            </TableRow>

        </TableLayout>
    </LinearLayout>


</LinearLayout>